                <div class="transcript-panel">
                    <div class="panel-header">
                        <div class="panel-title">üìù Transcript Editor</div>
                        <div>
                            <button class="btn success small" onclick="saveChanges()">
                                üíæ Save
                            </button>
                            <button class="btn secondary small" onclick="loadFullTranscriptData()">
                                üì• Load Full Transcript
                            </button>
                            <button class="btn warning small" onclick="exportData()">
                                üì§ Export
                            </button>
                        </div>
                    </div>
                    <div id="transcriptEditors">
                        <!-- Segment editors will be populated here -->
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Full episode transcript data will be loaded from combined_transcript.json
        let originalData = {
            segments: [],
            metadata: {
                title: "Life is Your Word - Episode 3 (Full)",
                duration: 220.45,
                created: new Date().toISOString(),
                modified: new Date().toISOString()
            }
        };
        
        let currentData = JSON.parse(JSON.stringify(originalData));
        let selectedSegmentId = null;
        let selectedWordId = null;
        let zoomLevel = 1.0;
        let pixelsPerSecond = 50;
        let totalDuration = 0;
        let isPlaying = false;
        let segmentAudioElements = {};
        
        const videoPlayer = document.getElementById('videoPlayer');
        
        function formatTime(seconds) {
            const mins = Math.floor(seconds / 60);
            const secs = Math.floor(seconds % 60);
            const ms = Math.floor((seconds % 1) * 1000);
            return `${mins}:${secs.toString().padStart(2, '0')}.${ms.toString().padStart(3, '0')}`;
        }
        
        function formatTimeShort(seconds) {
            const mins = Math.floor(seconds / 60);
            const secs = Math.floor(seconds % 60);
            return `${mins}:${secs.toString().padStart(2, '0')}`;
        }
        
        function showStatus(message, type = '') {
            const statusEl = document.getElementById('statusMessage');
            statusEl.textContent = message;
            statusEl.className = 'status-message ' + type;
            statusEl.classList.remove('hidden');
            
            setTimeout(() => {
                statusEl.classList.add('hidden');
            }, 3000);
        }
        
        function redistributeWordTimings(segment) {
            if (!segment.words || segment.words.length === 0) return;
            
            const duration = segment.endTime - segment.startTime;
            const words = segment.text.split(/\s+/).filter(w => w.length > 0);
            
            if (words.length === 0) return;
            
            // Redistribute word timings evenly across the segment
            const wordDuration = duration / words.length;
            segment.words = words.map((word, index) => ({
                word: word,
                start: segment.startTime + (index * wordDuration),
                end: segment.startTime + ((index + 1) * wordDuration)
            }));
        }
        
        function renderTranscriptEditors() {
            const container = document.getElementById('transcriptEditors');
            container.innerHTML = '';
            
            currentData.segments.forEach(segment => {
                const editorDiv = document.createElement('div');
                editorDiv.className = 'segment-editor';
                editorDiv.dataset.segmentId = segment.id;
                
                editorDiv.innerHTML = `
                    <div class="segment-header">
                        <div class="segment-title">Segment ${segment.id}</div>
                        <div class="segment-time">${formatTimeShort(segment.startTime)} - ${formatTimeShort(segment.endTime)}</div>
                    </div>
                    <textarea class="segment-text-input" placeholder="Enter transcript text...">${segment.text}</textarea>
                    <div class="word-timings" id="wordTimings-${segment.id}">
                        ${renderWordTimings(segment)}
                    </div>
                `;
                
                container.appendChild(editorDiv);
                
                // Add text change listener
                const textInput = editorDiv.querySelector('.segment-text-input');
                textInput.addEventListener('input', (e) => {
                    const newText = e.target.value;
                    const segmentId = parseInt(editorDiv.dataset.segmentId);
                    updateSegmentText(segmentId, newText);
                });
            });
        }
        
        function renderWordTimings(segment) {
            if (!segment.words || segment.words.length === 0) {
                return '<div style="color: #9ca3af; font-style: italic;">No word timings available</div>';
            }
            
            return segment.words.map((wordTiming, index) => {
                const duration = (wordTiming.end - wordTiming.start).toFixed(3);
                return `<span class="word-timing" onclick="playWord(${segment.id}, ${index})" title="Duration: ${duration}s">
                    ${wordTiming.word}<br>
                    <small>${formatTime(wordTiming.start)} ‚Üí ${formatTime(wordTiming.end)}</small>
                </span>`;
            }).join('');
        }
        
        function updateSegmentText(segmentId, newText) {
            const segment = currentData.segments.find(s => s.id === segmentId);
            if (segment) {
                segment.text = newText;
                redistributeWordTimings(segment);
                
                // Update word timings display
                const wordTimingsDiv = document.getElementById(`wordTimings-${segmentId}`);
                if (wordTimingsDiv) {
                    wordTimingsDiv.innerHTML = renderWordTimings(segment);
                }
                
                // Update timeline
                renderTimeline();
                
                showStatus(`Segment ${segmentId} text updated and word timings redistributed`, 'success');
            }
        }
        
        function renderTimeline() {
            const canvas = document.getElementById('timelineCanvas');
            const area = document.getElementById('segmentsArea');
            const container = canvas.parentElement;
            
            // Calculate total duration
            totalDuration = Math.max(...currentData.segments.map(s => s.endTime));
            
            // Calculate available width and adjust pixels per second accordingly
            const availableWidth = container.clientWidth - 40; // Account for padding
            const maxTimelineWidth = Math.max(availableWidth, 800);
            const calculatedWidth = totalDuration * pixelsPerSecond * zoomLevel;
            
            // Adjust pixels per second to fit within available width
            if (calculatedWidth > maxTimelineWidth) {
                pixelsPerSecond = maxTimelineWidth / (totalDuration * zoomLevel);
            }
            
            // Set canvas width
            const finalWidth = Math.min(calculatedWidth, maxTimelineWidth);
            canvas.style.width = finalWidth + 'px';
            canvas.style.maxWidth = '100%';
            
            // Render time ruler
            renderTimeRuler();
            
            // Render segments
            area.innerHTML = '';
            currentData.segments.forEach((segment, index) => {
                const segmentEl = document.createElement('div');
                segmentEl.className = 'timeline-segment';
                if (segment.id === selectedSegmentId) {
                    segmentEl.classList.add('selected');
                }
                
                const segmentLeft = (segment.startTime * pixelsPerSecond * zoomLevel);
                const segmentWidth = ((segment.endTime - segment.startTime) * pixelsPerSecond * zoomLevel);
                
                segmentEl.style.left = segmentLeft + 'px';
                segmentEl.style.width = segmentWidth + 'px';
                segmentEl.style.top = (10 + (index % 3) * 35) + 'px';
                
                segmentEl.innerHTML = `
                    <div class="segment-text">${segment.text}</div>
                    <div class="segment-time-display">${formatTimeShort(segment.startTime)} - ${formatTimeShort(segment.endTime)}</div>
                    <button class="segment-play-btn" onclick="playSegment(${segment.id})">‚ñ∂Ô∏è</button>
                `;
                
                segmentEl.addEventListener('click', (e) => {
                    if (!e.target.classList.contains('segment-play-btn')) {
                        selectSegment(segment.id);
                    }
                });
                area.appendChild(segmentEl);
            });
        }
        
        function renderTimeRuler() {
            const ruler = document.getElementById('timeRuler');
            ruler.innerHTML = '';
            
            const interval = 5; // 5-second intervals
            const startMark = Math.floor(0 / interval) * interval - interval;
            const endMark = Math.ceil(totalDuration / interval) * interval + interval;
            
            for (let time = startMark; time <= endMark; time += interval) {
                if (time >= 0 && time <= totalDuration) {
                    const mark = document.createElement('div');
                    mark.className = 'time-mark major';
                    mark.style.left = (time * pixelsPerSecond * zoomLevel) + 'px';
                    
                    const label = document.createElement('div');
                    label.className = 'time-label';
                    label.textContent = formatTimeShort(time);
                    label.style.left = (time * pixelsPerSecond * zoomLevel) + 'px';
                    
                    ruler.appendChild(mark);
                    ruler.appendChild(label);
                }
            }
        }
        
        function selectSegment(segmentId) {
            selectedSegmentId = segmentId;
            
            // Update timeline selection
            document.querySelectorAll('.timeline-segment').forEach(el => {
                el.classList.remove('selected');
            });
            
            const selectedEl = document.querySelector(`.timeline-segment[data-segment-id="${segmentId}"]`);
            if (selectedEl) {
                selectedEl.classList.add('selected');
            }
            
            // Scroll to segment editor
            const editorEl = document.querySelector(`.segment-editor[data-segment-id="${segmentId}"]`);
            if (editorEl) {
                editorEl.scrollIntoView({ behavior: 'smooth', block: 'center' });
            }
        }
        
        // Video/Audio playback functions
        function toggleMainPlayback() {
            const playBtn = document.getElementById('mainPlayBtn');
            
            if (videoPlayer.paused) {
                videoPlayer.play();
                playBtn.textContent = '‚è∏Ô∏è Pause';
                playBtn.classList.add('playing');
                isPlaying = true;
            } else {
                videoPlayer.pause();
                playBtn.textContent = '‚ñ∂Ô∏è Play';
                playBtn.classList.remove('playing');
                isPlaying = false;
            }
        }
        
        function stopPlayback() {
            videoPlayer.pause();
            videoPlayer.currentTime = 0;
            document.getElementById('mainPlayBtn').textContent = '‚ñ∂Ô∏è Play';
            document.getElementById('mainPlayBtn').classList.remove('playing');
            isPlaying = false;
            updatePlayhead(0);
        }
        
        function seekVideo(event) {
            const progressBar = event.currentTarget;
            const rect = progressBar.getBoundingClientRect();
            const clickX = event.clientX - rect.left;
            const percentage = clickX / rect.width;
            
            videoPlayer.currentTime = percentage * videoPlayer.duration;
        }
        
        function playSegment(segmentId) {
            const segment = currentData.segments.find(s => s.id === segmentId);
            if (segment) {
                videoPlayer.currentTime = segment.startTime;
                if (videoPlayer.paused) {
                    videoPlayer.play();
                    document.getElementById('mainPlayBtn').textContent = '‚è∏Ô∏è Pause';
                    document.getElementById('mainPlayBtn').classList.add('playing');
                    isPlaying = true;
                }
                
                // Highlight segment
                document.querySelectorAll('.timeline-segment').forEach(el => {
                    el.classList.remove('playing');
                });
                const segmentEl = document.querySelector(`.timeline-segment:has(.segment-play-btn[onclick="playSegment(${segmentId})"])`);
                if (segmentEl) {
                    segmentEl.classList.add('playing');
                }
                
                showStatus(`Playing segment ${segmentId}`, 'success');
            }
        }
        
        function playWord(segmentId, wordIndex) {
            const segment = currentData.segments.find(s => s.id === segmentId);
            if (segment && segment.words && segment.words[wordIndex]) {
                const word = segment.words[wordIndex];
                videoPlayer.currentTime = word.start;
                if (videoPlayer.paused) {
                    videoPlayer.play();
                    document.getElementById('mainPlayBtn').textContent = '‚è∏Ô∏è Pause';
                    document.getElementById('mainPlayBtn').classList.add('playing');
                    isPlaying = true;
                }
                
                // Highlight word
                document.querySelectorAll('.word-timing').forEach(el => {
                    el.classList.remove('playing');
                });
                event.target.classList.add('playing');
                
                showStatus(`Playing word: "${word.word}"`, 'success');
            }
        }
        
        function updatePlayhead(currentTime) {
            const playhead = document.getElementById('playhead');
            const progressFill = document.getElementById('mainProgressFill');
            const timeDisplay = document.getElementById('mainTimeDisplay');
            
            // Update main progress
            const percentage = (currentTime / videoPlayer.duration) * 100;
            progressFill.style.width = percentage + '%';
            timeDisplay.textContent = `${formatTimeShort(currentTime)} / ${formatTimeShort(videoPlayer.duration)}`;
            
            // Update timeline playhead
            if (currentTime > 0) {
                playhead.style.display = 'block';
                playhead.style.left = (currentTime * pixelsPerSecond * zoomLevel) + 'px';
            } else {
                playhead.style.display = 'none';
            }
            
            // Update segment playing state
            const currentSegment = currentData.segments.find(s => 
                currentTime >= s.startTime && currentTime <= s.endTime
            );
            
            document.querySelectorAll('.timeline-segment').forEach(el => {
                el.classList.remove('playing');
            });
            
            if (currentSegment) {
                const segmentEl = document.querySelector(`.timeline-segment:has(.segment-play-btn[onclick="playSegment(${currentSegment.id})"])`);
                if (segmentEl) {
                    segmentEl.classList.add('playing');
                }
            }
        }
        
